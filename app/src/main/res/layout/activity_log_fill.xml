<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="tools.tiger.gascap.LogFill">

    <TextView
        android:text="@string/log_fill_form_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/vehicle_form_title"
        android:layout_centerHorizontal="true"
        android:textSize="25dp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vehicle"
        android:spinnerMode="dropdown"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/vehicle_form_title" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@+string/vehicle_add_text"
        android:id="@+id/vehicle_save_button"
        android:layout_toRightOf="@id/vehicle"
        android:layout_centerHorizontal="true"
        android:onClick="addVehicle" />

</RelativeLayout>
